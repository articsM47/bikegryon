<div class="col mb-4 catalogue-card">
  <div class="card card-bike">
    <a href="/artics/Product/{{id}}">
      <img src="http://pingouin1.heig-vd.ch/artics/pictures/products/{{picture}}" class="card-img-top" alt={{shortDescr}}>
    </a>
    <div class="card-body catalogue-descr">
      <a href="/artics/Product/{{id}}">
        <h4 class="card-title">{{shortDescr}}</h4>
      </a>
      <div class="row">
        <div class="col-6">
          <p class="card-text">{{category}}</p>
        </div>
        <div class="col-6">
          <button type="button" class="button-remove-wish float-right wishRemove" data-key="{{key}}">
            <img src="http://pingouin1.heig-vd.ch/artics/fonts/delete.svg">
          </button>
        </div>
      </div>

    </div>
  </div>