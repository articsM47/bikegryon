<div class="" style="padding: 30px;">
  <div class="col card-bike">
    <div class="card h-100 border-0 mb-4">
      <a href="/Product/{{id}}">
        <img src="http://127.0.0.1:8000/pictures/products/{{picture}}" class="card-img-top" alt={{shortDescr}}>
      </a>
      <div class="card-body catalogue-descr">
        <a href="/Product/{{id}}" class="catalogue-product-link">
          <h4 class="card-title">{{shortDescr}}</h4>
        </a>
 
        <p class="card-text">
          {{category}}

          {{#if inWishlist}}
          <button type="button" class="float-right button-catalogue-like wishAdd">
            <img src="http://127.0.0.1:8000/fonts/wishlist_2.svg" width="40px">
          </button>
          {{else}}
          <button type="button" class="float-right button-catalogue-like wishDel" data-key="{{key}}">
            <img src="http://127.0.0.1:8000/fonts/wishlist_3.svg" width="40px">
          </button>
          {{/if}}
          
          {{!-- delete a bike for "rapresentant" user --}}
          <button type="button" class="float-right bikeDel button-wish">
            <img src="http://127.0.0.1:8000/fonts/delete.svg "width="40px" height="40">
          </button>
        </p>

      </div>
    </div>
  </div>
</div>