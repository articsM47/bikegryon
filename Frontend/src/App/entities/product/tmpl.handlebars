<div style="padding: 30px;">
  <div class="col card-bike">
    <div class="card h-100 border-0 mb-4">
      <a href="/artics/Product/{{id}}">
        <img src="http://pingouin1.heig-vd.ch/artics/pictures/products/{{picture}}" class="card-img-top" alt={{shortDescr}}>
      </a>
      <div class="card-body catalogue-descr">
        <a href="/artics/Product/{{id}}" class="catalogue-product-link">
          <h4 class="card-title">{{shortDescr}}</h4>
        </a>
      </div>

      <p class="card-text">
        {{category}}

        {{#if inWishlist}}
        <button type="button" class="float-right button-catalogue-like wishDel" data-key="{{key}}">
          <img src="http://pingouin1.heig-vd.ch/artics/fonts/wishlist_3.svg" width="40px">
        </button>

        {{else}}
        <button type="button" class="float-right button-catalogue-like wishAdd">
          <img src="http://pingouin1.heig-vd.ch/artics/fonts/wishlist_2.svg" width="40px">
        </button>
        {{/if}}
      </p>

    </div>
  </div>
</div>
